{
    "script": [
        "import json",
        "",
        "SCORE_FILE = \"score.json\"",
        "",
        "# Load existing scores",
        "def load_scores():",
        "    try:",
        "        with open(SCORE_FILE, \"r\") as file:",
        "            return json.load(file).get(\"scores\", {})",
        "    except (FileNotFoundError, json.JSONDecodeError):",
        "        return {}",
        "",
        "# Save a new score",
        "def save_score(player_name, score):",
        "    data = load_scores()",
        "    data[player_name] = score  # Update or add player's score",
        "",
        "    with open(SCORE_FILE, \"w\") as file:",
        "        json.dump({\"script\": load_script(), \"scores\": data}, file, indent=4)",
        "",
        "# Display high scores",
        "def display_high_scores():",
        "    scores = load_scores()",
        "    sorted_scores = sorted(scores.items(), key=lambda x: x[1], reverse=True)",
        "",
        "    print(\"\\nüèÜ High Scores üèÜ\")",
        "    for rank, (player, score) in enumerate(sorted_scores, start=1):",
        "        print(f\"{rank}. {player}: {score} points\")",
        "",
        "# Load script from JSON (so we don't overwrite code when saving scores)",
        "def load_script():",
        "    try:",
        "        with open(SCORE_FILE, \"r\") as file:",
        "            return json.load(file).get(\"script\", [])",
        "    except (FileNotFoundError, json.JSONDecodeError):",
        "        return []"
    ],
    "scores": {}
}
